.animate
	-webkit-animation-duration: .7s
	animation-duration: .7s
	&.infinite
		-webkit-animation-iteration-count: infinite;
		animation-iteration-count: infinite;
	&.reverse
		-webkit-animation-direction: reverse
		animation-direction: reverse
	for animation_name in animations
		&.{animation_name}
			-webkit-animation-name: animation_name;
			animation-name: animation_name;

.enter
	for animation_name in animations
		&-{animation_name}
			-webkit-animation-duration: .7s
			animation-duration: .7s
			&.ng-enter
				-webkit-animation-name: animation_name;
				animation-name: animation_name;
.exit
	for animation_name in animations
		&-{animation_name}
			-webkit-animation-duration: .7s
			animation-duration: .7s
			&.ng-leave
				-webkit-animation-name: animation_name;
				animation-name: animation_name;
.stagger
	for stagger in (0..20)
		&-{stagger * 50}
			display:block;
			&.ng-enter-stagger,
			&.ng-leave-stagger,
			&.ng-move-stagger 
				-webkit-animation-delay:(stagger * 50)ms;
				animation-delay:(stagger * 50)ms;
				-webkit-animation-duration:0;
				animation-duration:0;
		stagger += 1
.speed
	for speed in (0..80)
		&-{speed * 50}
			-webkit-animation-duration:(speed * 50)ms;
			animation-duration:(speed * 50)ms;
		speed += 1